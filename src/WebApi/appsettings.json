{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "sqlConnection": "server=(localdb)\\MSSQLLocalDB; database=StoreTestNetCore3; Integrated Security=true"
  },
  "JwtSettings": {
    "ValidIssuer": "API",
    "ValidAudience": "https://localhost:5001",
    // time in minutes after which the token expires
    "Expires": 15,
    // WARNING: security issue: secret in config is not best idea!
    // better store secret as environment variable (setx SECRET "ItsAwesomeTopSecret" /M)
    "Secret": "ItsAwesomeTopSecret!"
  },
  "AllowedHosts": "*"
}
